<div class="container">

  <div class="row justify-content-center">

    <div class="col-7">
    <%= render 'shared/errors'%>
      <%= form_with(model: @article, local:true) do |f| %>

        <div class="form-group row mb-4">
              <%= f.label :title, class:"col-2 col-form-label" %><br/>
              <%= f.text_field :title, class:"form-control" %>
         </div>
          
          <div class="form-group row my-0">
              <%= f.label :body, class:"col-2 col-form-label" %><br/>
              <%= f.text_area :body, rows:8, class:"form-control" %>
          </div>

          <div class="form-group row justify-content-center">
            <div class="text-center mt-4 mb-4">
              <%= f.submit class:"btn btn-dark btn-lg "%>
            </div>
          </div>
        <% end %>

         <div class="text-center">
            <%= link_to 'Cancel and return to articles listing', articles_path %>
        </div>
    </div>
  </div>
</div>