<h2 class="text-center mt-4"><%= @article.title%></h2>

<div class="container">
<div class="card mt-4 mb-4 text-center">
  <div class="card-body">
    <div class="row justify-content-md-center mb-5 mt-4">
    <div class="col-8">
    <p class="card-text"><%= @article.body %></p>
    <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-outline-secondary"%>
    <%= link_to 'Delete', article_path(@article), class:"btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
    </div>
  </div>
</div>
</div>
<div class="text-center">
  <%= link_to 'Return to articles listing', articles_path %>
</div>
