<%= form_with scope: :article, url: create_article_path, local: true do |f| %>
    <p>
      <% if @article.errors.any? %>
        <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </p>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br/>
        <%= f.text_field :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>